<table class= summary-table>
  <thead>
    <tr>
      <th class="summary-header-title"><%= diaries.last.time_of_day %></th>
      <th>Calories</th>
      <th>Protein</th>
      <th>Fats</th>
      <th>Carbs</th>
    </tr>
  </thead>
  <tbody>
    <% diaries.each do |diary| %>
      <tr class="diary-item">
        <td>
          <div class="summary-body-title">
            <%= diary.food ? diary.food.food_name : diary.meal ? diary.meal.meal_name : "Custom Food" %>
          </div>
          <button>Add food</button>
          <button>Add meal</button>
        </td>
        <td><%= diary.calories %></td>
        <td><%= diary.protein %></td>
        <td><%= diary.fats %></td>
        <td><%= diary.carbs %></td>
      </tr>
    <% end %>
    <tr class="totals-row">
      <td>totals</td>
      <td><%= diaries.sum(&:calories) %></td>
      <td><%= diaries.sum(&:protein) %></td>
      <td><%= diaries.sum(&:fats) %></td>
      <td><%= diaries.sum(&:carbs) %></td>
    </tr>
  </tbody>
</table>
