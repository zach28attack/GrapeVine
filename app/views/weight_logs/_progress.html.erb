<div class="progress-content">
  <h1 class="progress-content-header">Watch your progress!</h1>
  <%= line_chart @chart_data,
        width: '85%',
        colors: ['#8139a7', '#e51cb3'],
        min: @min_chart_data,
        max:@max_chart_data, 
        suffix: " lbs",
        loading: "Loading...",
        empty: "no data" %>

  <%= form_with model: @weight_log do |f|%>
  
    <%= f.label "Weight"%>
    <%= f.number_field :log %>
    <%= f.submit "Save"%>
  <% end %>

  <table class="weight-table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight (kg)</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @weight_logs.each do |weight_log| %>
          <tr>
            <td><%= weight_log.created_at.month %>/ <%= weight_log.created_at.day %>/ <%= weight_log.created_at.year %></td>
            <td><%= weight_log.log %></td>
            <td><%= button_to "Delete", weight_log_path(weight_log), data: { turbo_method: :delete } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
